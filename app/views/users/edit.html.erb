<div class="container-fluid">
  <div class="row">
    <div class="col image3"></div>
      <div class="col-md-9">
        <div class="text-center">
          <%= form_with model: @user, local: true do |f| %>
            名前<br><%= f.text_field :name, :placeholder => "名前",autofocus: true, autocomplete: "name" %></br>
            <% if @user.provider.blank? %>
              メールアドレス<br><%= f.email_field :email, :placeholder => "メールアドレス", autocomplete: "email" %><br>
            <% end %>
            <div class="pt-3"><%= f.submit "変更を保存", class:"btn btn-success"%></div>
          <% end %>
          <%= link_to "パスワードを編集", edit_user_registration_path %>
        </div>
      </div>
    <div class="col image3-2"></div>
  </div>
</div>