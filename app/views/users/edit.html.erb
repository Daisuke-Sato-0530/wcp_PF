<div class="container">
  <div class="row">
    <div class="col"></div>
      <div class="col mx-auto">
        <%= form_with model: @user, local: true do |f| %>
          名前<%= f.text_field :name, autofocus: true, autocomplete: "name" %></br>
          メールアドレス<%= f.email_field :email, autocomplete: "email" %>
          <%= f.submit %>
        <% end %>
        <%= link_to "パスワードを編集", edit_user_registration_path %>
      </div>
    <div class="col"></div>
  </div>
</div>