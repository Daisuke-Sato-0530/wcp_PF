<div class="container">
  <div class="row mb-5 mt-5">
    <div class="col"></div>
    <div class="col-sm-8"><h2 class="float-left"><%= @item.name %></h2></div>
    <div class="col"></div>

  </div>
  <div class="row">
    <div class="col"></div>
    <div class="col-sm-8 d-flex">
      <span class="mr-5"><%= attachment_image_tag(@item, :image, :fill, 150, 150, fallback: "no_image.jpg",size:"150x150") %></span>
      <span class="ml-5 pt-4"><%= @item.body%></span>
    </div>
    <div class="col"></div>
  </div>
  <div class="row mt-5">
    <div class="col-sm-8 mx-auto">
      <div>
        <table class="table">
          <thead>
            <tr>
              <th>コメント</th>
              <th class="text-center">日付</th>
            </tr>
          </thead>
          <% @item.comments.each do |comment| %>
          <tr>
            <td style="height:100px; width:50%"><%= comment.comment %></td>
            <td class="text-center" style="width:25%"><%= comment.created_at.strftime('%Y/%m/%d') %></td>
            <% if comment.user == current_user %>
              <%= form_with(model:[@item, @comment], local: true) do |f| %>
                <td style="width:25%"><%= link_to "削除",item_comment_path(comment.item,comment), method: :delete, class:"btn btn-danger btn-sm"%></td>
              <% end %>
            <% end %>
          </tr>
          <% end %>
        </table>
        <div>
          <%= form_with(model:[@item, @comment], local: true) do |f| %>
            <%= f.text_area :comment, class: 'form-control'%>
            <div class="text-center btn">
              <%= f.button :type => "submit",style:'border-style: none; background: none;' do %>
                <i class="far fa-comment-alt"></i>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>