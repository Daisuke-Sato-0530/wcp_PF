<div class="container">
  <div class="row mb-5"></div>
  <div class="row">
    <div class="col"></div>
    <div class="col mt-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <div class="field text-center">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      
          <div class="field">
            <%= f.label :パスワード %><br />
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div>
              <%= f.check_box :remember_me %>
              <%= f.label :ログイン状態を維持 %>
            </div>
          <% end %>
        </div>
        <div class="mx-auto" style="height:250px; width:250px;">
          <%= f.submit "GO!" , class: "btn btn-success w-100 h-100 rounded-circle" %>
        </div>
        <div class="text-center">
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "googleでログイン", omniauth_authorize_path(resource_name, provider) %><br />
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="col"></div>
  </div>
</div>

