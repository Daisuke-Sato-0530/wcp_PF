<div class="image1">
<div class="container">
  <div class="row mb-5"></div>
  <div class="row">
    <div class="col"></div>
    <div class="col mt-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field text-center">
          <%= f.email_field :email, autofocus: true, :placeholder => "メールアドレス", autocomplete: "email" ,class:"mb-3"%>

          <div class="field">
            <%= f.password_field :password, :placeholder => "パスワード", autocomplete: "current-password" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div>
              <%= f.check_box :remember_me %>
              <%= f.label :ログイン状態を維持 %>
            </div>
          <% end %>
        </div>
        <div class="mx-auto" style="height:250px; width:250px;">
          <%= f.submit "ログイン！" , class: "btn btn-success w-100" %>
          <div class="text-center pt-3">
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to omniauth_authorize_path(resource_name, provider) do %>
              <i class="fab fa-google btn btn-primary rounded-circle"></i>
            <% end %><br />
          <% end %>
        </div>
        </div>

      <% end %>
    </div>
    <div class="col"></div>
  </div>
</div>
</div>

