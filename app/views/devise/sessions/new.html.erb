<div class="container">
  <div class="row">
    <h2>ログイン</h2>
  </div>
  <div class="row">
    <div class="col">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
        <div class="field text-center">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      
        <div class="field text-center">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      
        <% if devise_mapping.rememberable? %>
          <div class="field text-center">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン状態を維持 %>
          </div>
        <% end %>
        <div class="text-center">
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "googleでログイン", omniauth_authorize_path(resource_name, provider) %><br />
          <% end %>
        </div>
      </div>
      <div class="col pb-5" style="h-75px">
        <div class="actions" style="height:250px; width:250px;">
          <%= f.submit "GO!" , class: "btn btn-success w-100 h-100 rounded-circle" %>
        </div>
          <% end %>
      </div>
  </div>
</div>