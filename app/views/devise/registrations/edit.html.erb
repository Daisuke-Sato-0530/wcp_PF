<div class="container">
  <div class="row">
    <div class="col"></div>
      <div class="col text-nowrap">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field w-100">
            新しいパスワード<br>
            <%= f.password_field :password, :placeholder => "6文字以上",size:"40", autocomplete: "new-password", class:"mb-3" %>
          </div>

          <div class="field">
            新しいパスワード<span class="text-muted">(確認)</span><br />
            <%= f.password_field :password_confirmation, size:"40", autocomplete: "new-password", class:"mb-3" %>
          </div>

          <div class="field">
            現在のパスワード<br />
            <%= f.password_field :current_password, size:"40", autocomplete: "current-password", class:"mb-3" %>
          </div>

          <div class="actions text-center">
            <%= f.submit "Update", class:"btn btn-success w-100" %>
          </div>
        <% end %>


    </div>
    <div class="col d-flex align-items-end">
        <div style="width:100%;" class="text-right"><%= link_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当にアカウントを削除しますか?" }, method: :delete %></div>
    </div>
  </div>
</div>