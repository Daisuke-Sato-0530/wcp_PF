<div class="container">
  <div class="row">
    <div class="col"></div>
      <div class="col text-nowrap">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="field">
            <%= f.label :"新しいパスワード" %> <span class="text-muted">(<em><%= @minimum_password_length %>文字以上、</em>パスワードを変更しない場合は空白のまま)</span><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <br />

            <% end %>
          </div>

          <div class="field">
            <%= f.label :"新しいパスワード" %><span class="text-muted">(確認)</span><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :"現在のパスワード" %><br />
            <%= f.password_field :current_password, autocomplete: "current-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Update" %>
          </div>
        <% end %>

        <h3>アカウント削除</h3>

        <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "本当にアカウントを削除しますか?" }, method: :delete %>

        <%= link_to "Back", :back %>
    </div>
  <div class="col"></div>
  </div>
</div>