<div class="container">
  <div class="row">
    <div class="col">
      <table class="table">
        <tr>
          <th><%= @ranking.title %></th>
        </tr>
        <tr>
          <td><%= @ranking.introduction %></td>
        </tr>
        <tr>
          <th style="width:20%"></th>　<!--width指定しないと間隔が固定されなくて変-->
          <th style="width:20%">名前</th>
          <th style="width:20%">説明</th>
          <th style="width:20%">いいね</th>
          <th style="width:20%">コメント数</th>
        </tr>
        <% @items.each do |item| %>
          <tr  id="item_<%= item.id %>">
            <td>
              <%= link_to item_path(item), class: 'hoge' do %>
              <%# image_tag attachment_url(item, :image, :fill, 150, 150, format: "jpg") %>
              <%= attachment_image_tag(item, :image, :fill, 150, 150, fallback: "no_image.jpg",size:"150x150") %>
              <% end %>
            </td>
            <td class="align-middle"><%= item.name %></td>
            <td class="align-middle"><%= item.body %></td>
            <td class="favorite-btn">
              <%= render 'favorites/favorite-btn', item: item %> <!--favoriteの部分のテンプレート-->
            </td>
            <td class="align-middle"><%= item.comments.count %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>


