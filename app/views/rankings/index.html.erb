<div class="container">
  <div class="row mt-3">
    <div class="col"><h2>ランキング一覧</h2>
    </div>
    <div class="col">
      <%= search_form_for @search do |f| %>
      <%= f.label :title_cont, "ランキングタイトルで検索" %>
      <%= f.search_field :title_cont %>
      <%= f.submit "検索" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 mx-auto">
      <table class="table">
        <thead>
          <tr>
            <th>ランキング</th>
            <th class="text-center">いいね</th>
            <th class="text-center">コメント数</th>
            <th class="text-center">日付</th>
          </tr>
        </thead>
        <% @rankings.each do |ranking| %>
          <tr>
            <td class="align-middle h3" style="height:100px;"><%= link_to ranking.title, ranking_path(ranking), class: "text-dark"%></td>
            <td class="text-center align-middle">
              <% @favorites_count = 0 %>
              <% ranking.items.each do |item| %>
                <% @favorites_count = @favorites_count + item.favorites.count %>
              <% end %>
              <%= @favorites_count %>
            </td>
            <td class="text-center align-middle">
              <% @comments_count = 0 %>
              <% ranking.items.each do |item| %>
                <% @comments_count = @comments_count + item.comments.count %>
              <% end %>
              <%= @comments_count %>
            </td>
            <td class="text-center align-middle"><%= ranking.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td>
              <% ranking.tag_list.each do |tag| %>
                <span class="btn btn-primary"><%= link_to tag,rankings_path(tag_name: tag),class: "text-white"%></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
