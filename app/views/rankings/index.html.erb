  <% @m = Array.new %>
  <% @d = m.month.from_now.beginning_of_month.to_date %>
  <% (@d..@d.end_of_month.to_date).each do |mm| %>
    <% @m.push(mm) %>
  <% end %>
  <% @mm.push(@m) %>
  
<% end %> 

